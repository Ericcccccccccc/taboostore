# Production Environment Variables for Taboo Store
# Copy this file to .env.production and update values as needed

# Backend Configuration
BACKEND_PORT=5555
ENVIRONMENT=production

# CORS Origins (update with your actual domain)
CORS_ORIGINS=https://itaboo.store,https://www.itaboo.store

# Frontend Configuration
VITE_API_URL=https://itaboo.store/api
NODE_ENV=production

# Optional: Database Configuration (if you add database later)
# DATABASE_URL=postgresql://user:password@localhost:5432/taboostore

# Optional: Redis Configuration (if you add caching later)
# REDIS_URL=redis://localhost:6379

# Optional: Session Secret (if you add authentication later)
# SESSION_SECRET=your-secret-key-here

# Optional: API Keys (if you add external services later)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
